[app:main]
use = egg:{{ project }}
data.folder = %(here)s/data_development

website.version = 0.1
website.name = {{ project }}
website.owner = InvisibleRoads
website.year = 2017
website.brand_url = /#
website.base_url = /
website.base_template = invisibleroads_posts:templates/base.jinja2
website.page_not_found_template = invisibleroads_posts:templates/404.jinja2
# Specify assets to be available at the root URL
website.root_assets =
    invisibleroads_posts:assets/favicon.ico
    invisibleroads_posts:assets/robots.txt
website.environment =

# Cache assets for specified number of seconds
client_cache.http.expiration_time_in_seconds = 3600
server_cache.function.backend = dogpile.cache.memory
server_cache.function.expiration_time = 3600

jinja2.lstrip_blocks = true
jinja2.trim_blocks = true

pyramid.reload_templates = true
pyramid.prevent_http_cache = true
pyramid.debug_authorization = false
pyramid.debug_notfound = false
pyramid.debug_routematch = false
pyramid.default_locale_name = en
# pyramid.includes = pyramid_debugtoolbar

[server:main]
use = egg:waitress#main
listen = 127.0.0.1:6543
url_scheme = http

[loggers]
keys = root, {{ package }}
[handlers]
keys = console, error_file
[formatters]
keys = generic, error_format

[logger_root]
level = DEBUG
handlers = console, error_file
[logger_{{ package }}]
level = DEBUG
handlers =
qualname = {{ package }}

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic
[handler_error_file]
class = FileHandler
args = ('%(here)s/development_error.log', 'a')
level = WARNING
formatter = error_format

[formatter_generic]
format = %(asctime)s %(levelname)-5.5s [%(name)s:%(lineno)s][%(threadName)s] %(message)s
[formatter_error_format]
format = %(asctime)f %(levelname)s [%(funcName)s:%(lineno)s] %(message)s
